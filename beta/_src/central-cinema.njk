{# ----- Content ----- #}
{% block content %}

{% include "partials/nametag.njk" %}

<header id="central" class="r">
    <div class="container">
        <div class="feature">
            <div class="container-inner">
                <h1>Central Cinema</h1>
                <h3>Redesigning the ticket booking experience for a theatre.</h3>
                <div class="button-container">
                    <a href="central-cinema.html" class="trigger--central">Read About It</a>
