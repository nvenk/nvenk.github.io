{% set meta = {
        url: 'http://nvenk.com',
        site: 'Nikhil Venkatesh - Product Designer'
}%}

<!DOCTYPE html>
<html lang="en">
    <head>
        {% include "partials/meta.njk" %}

        <title>{{ meta2.title }}</title>
        <script src="js/vendor/scroll-restoration-polyfill.browser.js"></script>
        <link rel="stylesheet" type="text/css" href="{{ var.styles }}" />
    </head>

    <body class="{{ var.bodyClass }}">
        <div class="responsive-beacon"></div>
        <script>
            if(document.getElementsByTagName('body')[0].className == "home") {
                history.scrollRestoration = 'auto';
            }
            else {
                history.scrollRestoration = 'manual';
            }
        </script>

        {% block content %}{% endblock %}

        {% block scripts %}{% endblock %}

        {# <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script> #}

        <script src="js/vendor/jquery-3.2.0.min.js" charset="utf-8"></script>
        <script src="js/vendor/ScrollMagic.min.js" charset="utf-8"></script>
        <script src="js/vendor/plugins/debug.addIndicators.min.js" charset="utf-8"></script>
        <script src="{{ var.scripts }}"></script>

    </body>
</html>
