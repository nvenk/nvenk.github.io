{% set meta = {
        url: 'http://nvenk.com',
        site: 'Nikhil Venkatesh - Product Designer'
}%}

<!DOCTYPE html>
<html lang="en">
    <head>
        {% include "partials/meta.njk" %}

        <title>{{ meta2.title }}</title>

        {# Scroll Restoration PolyFill #}
        <script src="scripts/lib/scroll-restoration-polyfill.browser.js"></script>

        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400|Source+Sans+Pro:400,900" rel="stylesheet">

        <link rel="stylesheet" type="text/css" href="{{ var.styles }}" />
    </head>

    <body class="{{ var.bodyClass }} ">
        <div class="responsive-beacon"></div>
        {# Set Scroll Restoration to 'manual' on Project pages #}
        <script>
            if(document.getElementsByTagName('body')[0].className == "home") {
                history.scrollRestoration = 'auto';
            }
            else { history.scrollRestoration = 'manual'; }
        </script>

        {% include "partials/nav.njk" %}

        {% block content %}{% endblock %}

        {% include "partials/footer.njk" %}

        {# CDN Scripts

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script> #}

        <script src="scripts/lib/jquery-3.2.0.min.js" charset="utf-8"></script>
        <script src="scripts/lib/ScrollMagic.min.js" charset="utf-8"></script>
        <script src="scripts/lib/scrollMagic-plugins/debug.addIndicators.min.js" charset="utf-8"></script>
        {# <script src="scripts/lib/zoom.min.js" charset="utf-8"></script> #}

        <script src="{{ var.scripts }}"></script>

        {% block scripts %}{% endblock %}

    </body>
</html>
