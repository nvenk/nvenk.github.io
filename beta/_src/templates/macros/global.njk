
{# PROJECT TILES #}
{% macro project(name='proj', direction='r', title='title - Project Title', tagline='tagline - Project Tagline goes here', url='#', header = "no") %}

<section id="{{ name }}" class="proj {{ direction }}{%if header == 'header' %} header {% endif %}">
    <div class="feature-container container">
        <div class="feature-desc">
            <h2>{{ title }}</h2>
            <h3>{{ tagline}}</h3>
            <div class="button-container">
                <a href="{{ url }}.html" class="trigger--{{ name }} hidden-phone">Read About It</a>
            </div>
        </div>
        <div class="feature-image">
            <div class="image-container container">
                <picture>
                    <img src="img/{{ name }}/feature.png" alt="" />
                </picture>
            </div>
        </div>
    </div>
    <a href="{{ url }}.html" class="trigger--{{ name }} overlay-trigger visible-phone"></a>
</section>

{% endmacro %}
